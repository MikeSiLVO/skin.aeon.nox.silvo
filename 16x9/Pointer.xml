<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<include condition="String.IsEmpty(Skin.String(PointerSize))">Pointer</include>
		<include condition="String.IsEqual(Skin.String(PointerSize),medium)" content="Pointer">
			<param name="size">75</param>
		</include>
		<include condition="String.IsEqual(Skin.String(PointerSize),large)" content="Pointer">
			<param name="size">100</param>
		</include>
	</controls>
</window>