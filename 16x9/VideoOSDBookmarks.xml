<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<controls>
		<control type="group">
			<animation effect="fade" end="100" time="250">WindowOpen</animation>
			<animation effect="fade" end="0" time="250">WindowClose</animation>
			<animation effect="fade" end="100" time="250">VisibleChange</animation>
			<control type="image">
				<left>-5%</left>
				<top>-30</top>
				<width>110%</width>
				<height>340</height>
				<texture border="40" flipy="true">dialogs/default/bg.png</texture>
			</control>
			<control type="panel" id="11">
				<height>400</height>
				<ondown>60</ondown>
				<onup>9000</onup>
				<scrolltime tween="quadratic" easing="out">400</scrolltime>
				<viewtype label="536">icon</viewtype>
				<pagecontrol>60</pagecontrol>
				<orientation>horizontal</orientation>
				<animation type="WindowOpen" reversible="false">
					<effect type="fade" start="0" end="100" time="200" />
				</animation>
				<animation type="WindowClose" reversible="false">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				<itemlayout height="300" width="384">
					<control type="image">
						<width>384</width>
						<height>215</height>
						<aspectratio align="center">scale</aspectratio>
						<texture border="2" background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>2</bordersize>
						<bordertexture border="2" infill="false">colors/black.png</bordertexture>
					</control>
					<control type="image">
						<top>170</top>
						<width>384</width>
						<height>45</height>
						<texture>colors/black25.png</texture>
					</control>
					<control type="label">
						<top>170</top>
						<width>384</width>
						<height>40</height>
						<textoffsetx>10</textoffsetx>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>170</top>
						<width>384</width>
						<height>40</height>
						<align>right</align>
						<textoffsetx>10</textoffsetx>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<control type="image">
						<width>384</width>
						<height>215</height>
						<aspectratio>scale</aspectratio>
						<texture>colors/black10.png</texture>
						<bordersize>2</bordersize>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="384">
					<control type="image">
						<width>384</width>
						<height>215</height>
						<aspectratio align="center">scale</aspectratio>
						<texture border="2" background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>2</bordersize>
						<bordertexture border="2" infill="false">colors/black.png</bordertexture>
					</control>
					<control type="image">
						<top>170</top>
						<width>384</width>
						<height>45</height>
						<texture>colors/black25.png</texture>
					</control>
					<control type="label">
						<top>170</top>
						<width>384</width>
						<height>40</height>
						<textoffsetx>10</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>170</top>
						<width>384</width>
						<height>40</height>
						<align>right</align>
						<textoffsetx>10</textoffsetx>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<control type="image">
						<width>384</width>
						<height>215</height>
						<aspectratio>scale</aspectratio>
						<texture>colors/black10.png</texture>
						<bordersize>2</bordersize>
						<include>FocusFadeOutAnimation</include>
					</control>
					<control type="image">
						<top>2</top>
						<left>1</left>
						<width>382</width>
						<height>212</height>
						<texture border="4" infill="false" colordiffuse="$VAR[HighlightBarColor]">colors/white.png</texture>
						<include>FocusFadeInAnimation</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<top>215</top>
				<width>100%</width>
				<height>6</height>
				<onup>11</onup>
				<ondown>9000</ondown>
				<texturesliderbackground />
				<texturesliderbar>colors/white25.png</texturesliderbar>
				<texturesliderbarfocus colordiffuse="$VAR[ThemeLabelColor]">colors/white.png</texturesliderbarfocus>
				<textureslidernib />
				<textureslidernibfocus />
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
			</control>
			<control type="grouplist" id="9000">
				<top>223</top>
				<width>100%</width>
				<height>70</height>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<align>center</align>
				<orientation>horizontal</orientation>
				<control type="button" id="2">
					<description>Create Bookmark button</description>
					<label>294</label>
					<width>300</width>
					<height>70</height>
				</control>
				<control type="button" id="3">
					<description>Clear Bookmark button</description>
					<label>296</label>
					<width>300</width>
					<height>70</height>
				</control>
				<control type="button" id="4">
					<description>Set episode thumbnail button</description>
					<label>20406</label>
					<width>300</width>
					<height>70</height>
					<visible>Control.IsEnabled(4)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>