							<width>240</width>
							<height>360</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture border="4" background="true">$VAR[PosterThumbVar]</texture>
							<bordersize>4</bordersize>
							<bordertexture border="4" infill="false">colors/black.png</bordertexture>
						</control>
						<control type="image">
							<width>240</width>
							<height>360</height>
							<texture>colors/black25.png</texture>
							<bordersize>4</bordersize>
						</control>
						<include content="PosterStatusOverlay">
							<param name="left">196</param>
							<param name="top">4</param>
							<param name="size">40</param>
							<param name="visible">[!String.IsEmpty(Skin.String(511.Movies.DisableOverlay)) + Container.Content(movies)] | [!String.IsEmpty(Skin.String(511.TV.DisableOverlay)) + Container.Content(tvshows)] | [!String.IsEmpty(Skin.String(511.Sets.DisableOverlay)) + Container.Content(sets)]</param>
