			<control type="group">
				<visible>Container.Content(artists) | Container.Content(albums)</visible>
				<control type="image">
					<width>1</width>
					<height>1080</height>
					<texture>colors/black.png</texture>
				</control>
				<control type="image">
					<left>1919</left>
					<width>1</width>
					<height>1080</height>
					<texture>colors/black.png</texture>
