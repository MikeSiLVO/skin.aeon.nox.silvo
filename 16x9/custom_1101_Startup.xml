<?xml version="1.0" encoding="UTF-8"?>
<window id="1101" type="window">
	<onload>RunScript(script.skin.info.service)</onload>
	<onload>Skin.SetBool(SkinInfo.EnableSlideshow)</onload>
	<onload condition="!Skin.HasSetting(Enable.BlurredVideoInfo)">Skin.Reset(SkinInfo.Blur)</onload>
	<onload condition="Skin.HasSetting(Enable.BlurredVideoInfo)">Skin.SetBool(SkinInfo.Blur)</onload>
	<onload condition="Skin.HasSetting(Enable.BlurredVideoInfo)">SetProperty(SkinInfo.BlurSourceVar,PosterVar,home)</onload>
	<onload condition="System.AddonIsEnabled(script.artistslideshow)">RunScript(script.artistslideshow,daemon=True)</onload>
	<onload condition="!String.IsEmpty(Skin.String(StartupIntro))">SetFocus(10)</onload>
	<onload condition="String.IsEmpty(Skin.String(StartupIntro))">ReplaceWindow($INFO[System.StartupWindow])</onload>
	<!-- RESET TMDBH SETTINGS -->
	<onload>Skin.Reset(TMDbHelper.Service)</onload>
	<onload>Skin.Reset(TMDbHelper.EnableBlur)</onload>
	<onload>Skin.Reset(TMDbHelper.MonitorContainer,9143)</onload>
	<onload>Skin.Reset(TMDbHelper.DisableArtwork)</onload>
	<onload>Skin.Reset(TMDbHelper.DisableExtendedProperties)</onload>
	<onload>Skin.Reset(TMDbHelper.DirectCallAuto)</onload>
	<onunload condition="!String.IsEmpty(Skin.String(StartupIntro))">SetProperty(Playing.StartupIntro,True,Home)</onunload>
	<controls>
		<control type="button" id="10">
			<include>HiddenObject</include>
			<onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<onfocus>PlayMedia($ESCINFO[Skin.String(StartupIntro)])</onfocus>
		</control>
	</controls>
</window>