<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<onload>SetProperty(Window.HasSettings,True,Home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(MediaMenu,Home)</onunload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<views>50</views>
	<controls>
		<include>CommonBackground</include>
		<control type="group">
			<description>Timers group</description>
			<visible>Control.IsVisible(50)</visible>
			<include>WindowOpenCloseAnimation</include>
			<include>ViewAnimation</include>
			<left>100</left>
			<top>-90</top>
			<control type="image">
				<left>-32</left>
				<top>148</top>
				<width>1784</width>
				<height>904</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="list" id="50">
				<top>180</top>
				<width>1720</width>
				<height>840</height>
				<onleft>SetProperty(MediaMenu,True,Home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>72</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>72</pagecontrol>
				<scrolltime tween="quadratic">200</scrolltime>
				<itemlayout height="120" width="1720">
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>B3FFFFFF</colordiffuse>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>135</left>
						<width>950</width>
						<height>120</height>
						<font>font60</font>
						<label>$INFO[ListItem.Label]</label>
						<visible>String.IsEmpty(ListItem.Date)</visible>
					</control>
					<control type="label">
						<left>135</left>
						<width>1510</width>
						<height>50</height>
						<font>font30</font>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.ChannelName]$INFO[ListItem.Label, - ]</label>
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<animation effect="slide" end="0,15" condition="String.IsEmpty(ListItem.EpisodeName)">Conditional</animation>
					</control>
					<control type="label">
						<left>135</left>
						<top>40</top>
						<width>950</width>
						<height>45</height>
						<font>font12</font>
						<textcolor>grey2</textcolor>
						<label>$VAR[EpisodeCountVar,, - ]$INFO[ListItem.EpisodeName]</label>
						<visible>!String.IsEmpty(ListItem.EpisodeName)</visible>
					</control>
					<control type="label">
						<left>135</left>
						<top>70</top>
						<width>1510</width>
						<height>50</height>
						<font>font15</font>
						<textcolor>grey3</textcolor>
						<label>$INFO[ListItem.Date]</label>
						<animation effect="slide" end="0,-15" condition="String.IsEmpty(ListItem.EpisodeName)">Conditional</animation>
					</control>
					<control type="label">
						<left>200</left>
						<width>1510</width>
						<height>50</height>
						<font>font12</font>
						<align>right</align>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Timertype]</label>
					</control>
					<control type="image">
						<left>1670</left>
						<top>46</top>
						<width>36</width>
						<height>36</height>
						<texture>$VAR[PVRTimerIcon]</texture>
					</control>
					<control type="label">
						<left>200</left>
						<top>75</top>
						<width>1510</width>
						<height>50</height>
						<font>font12</font>
						<align>right</align>
						<textcolor>grey3</textcolor>
						<label>$INFO[ListItem.Comment]</label>
					</control>
				</itemlayout>
				<focusedlayout height="120" width="1720">
					<control type="image">
						<width>1720</width>
						<height>120</height>
						<texture colordiffuse="$VAR[HighlightBarColor]" border="4">listselect_fo.png</texture>
						<visible>Control.HasFocus(50)</visible>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>135</left>
						<width>950</width>
						<height>120</height>
						<font>font60</font>
						<label>$INFO[ListItem.Label]</label>
						<visible>String.IsEmpty(ListItem.Date)</visible>
					</control>
					<control type="label">
						<left>135</left>
						<width>1510</width>
						<height>50</height>
						<font>font30</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.ChannelName]$INFO[ListItem.Label, - ]</label>
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<animation effect="slide" end="0,15" condition="String.IsEmpty(ListItem.EpisodeName)">Conditional</animation>
					</control>
					<control type="label">
						<left>135</left>
						<top>40</top>
						<width>950</width>
						<height>45</height>
						<font>font12</font>
						<textcolor>grey</textcolor>
						<label>$VAR[EpisodeCountVar,, - ]$INFO[ListItem.EpisodeName]</label>
						<visible>!String.IsEmpty(ListItem.EpisodeName)</visible>
					</control>
					<control type="label">
						<left>135</left>
						<top>70</top>
						<width>1510</width>
						<height>50</height>
						<font>font15</font>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Date]</label>
						<animation effect="slide" end="0,-15" condition="String.IsEmpty(ListItem.EpisodeName)">Conditional</animation>
					</control>
					<control type="label">
						<left>200</left>
						<width>1510</width>
						<height>50</height>
						<font>font12</font>
						<align>right</align>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Timertype]</label>
					</control>
					<control type="image">
						<left>1670</left>
						<top>46</top>
						<width>36</width>
						<height>36</height>
						<texture>$VAR[PVRTimerIcon]</texture>
					</control>
					<control type="label">
						<left>200</left>
						<top>75</top>
						<width>1510</width>
						<height>50</height>
						<font>font12</font>
						<align>right</align>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Comment]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="72">
				<left>1140</left>
				<top>180</top>
				<width>14</width>
				<height>840</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,Home)</onright>
				<onright>SetFocus(9050)</onright>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="80FFFFFF" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
			</control>
		</control>
		<include condition="!Skin.HasSetting(Disable.ScrollLabel)">ScrollOffsetLabel</include>
		<include>PVRBackgroundDim</include>
		<include>Topbar</include>
		<include>PVRMediaMenu</include>
	</controls>
</window>
